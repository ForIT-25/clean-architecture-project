{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",

    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false,

    "composite": true,
    "rootDir": "src",
    "outDir": "dist",

    "strict": true,
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "skipLibCheck": true
  },

  "include": ["src"],
  "exclude": ["dist", "node_modules"]
}
