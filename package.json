{
  "name": "clean-architecture-project",
  "version": "1.0.0",
  "description": "Proyecto realizado para aplicar conceptos de arquitectura limpia en academy ForIT",
  "private": true,

  "workspaces": [
    "domain",
    "apps/backend",
    "apps/frontend"
  ],

  "scripts": {
    "build": "npm -w @hotel-project/domain run build && npm -w @hotel-project/backend run build",

    "dev:back": "npm -w @hotel-project/backend run dev",

    "test": "npm run build && vitest",
    "test:domain": "npm -w @hotel-project/domain run build && vitest domain/src",
    "test:back": "npm -w @hotel-project/domain run build && vitest apps/backend/src",

    "lint": "eslint .",
    "format": "prettier --write .",

    "prisma:generate": "npm -w @hotel-project/backend run prisma:generate",
    "prisma:migrate": "npm -w @hotel-project/backend run prisma:migrate",
    "prisma:reset": "npm -w @hotel-project/backend run prisma:reset"
  },

  "repository": {
    "type": "git",
    "url": "git+https://github.com/ForIT-25/clean-architecture-project.git"
  },

  "bugs": {
    "url": "https://github.com/ForIT-25/clean-architecture-project/issues"
  },

  "homepage": "https://github.com/ForIT-25/clean-architecture-project#readme",

  "devDependencies": {
    "@eslint/js": "^9.37.0",
    "@eslint/json": "^0.13.2",
    "@eslint/markdown": "^7.4.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@typescript-eslint/eslint-plugin": "^8.46.0",
    "@typescript-eslint/parser": "^8.46.0",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^16.4.0",
    "jiti": "^2.6.1",
    "jsdom": "^27.0.0",
    "prettier": "^3.6.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.0",
    "vitest": "^3.2.4"
  },

  "dependencies": {
    "bcryptjs": "^3.0.3",
    "jsonwebtoken": "^9.0.2"
  }
}
